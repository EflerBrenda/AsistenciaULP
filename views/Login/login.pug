extends ../layout
block styles
    link(href="/stylesheets/LogIn/login.css" rel="stylesheet")
    link(href="/stylesheets/LogIn/signin.css" rel="stylesheet")
block content
    main(class="form-signin w-100 m-auto text-center")
        //img(class="mb-4" src="/images/todo.png" alt="" height="150")
        h1(class="h3 mb-3 fw-normal") Asistencia ULP
        form(action="/login", method="post")
            div(class="form-floating mb-3")
                input(type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com" value="coordinador@ulp.edu.ar")
                label(for="floatingInput") Email 
            div(class="form-floating mb-3")
                input(type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" value="123")
                label(for="floatingPassword") Password
            button(class="w-100 btn btn-lg btn-primary" type="submit") Entrar
        if mensaje && mensaje.length > 0
            div(class="mt-3")
                div(class="alert alert-danger" role="alert")
                    span #{mensaje[0]}